@model PA_BlogProject_2021.Models.Roles

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/ManagementPanel/Views/Shared/_AdminLayout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm("Create","Roles",FormMethod.Post)) 
{
    @Html.AntiForgeryToken()<!--
                                
                            Ben burada post işlemi yaptığım için güvenlik açığım var. Unicode ile bu alanın güvenliğini AntiForgeryToken sağlar
                                bana bir unicode verir ve controllerda post ettiğim metodumda bu kontol edilir eşitse işlem yapılır.
                                -->
    
    <div class="form-horizontal">
        <h4>Roles</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
             <span class="btn btn-danger">Rol Adı</span>
            <div class="col-md-10">

                @Html.EditorFor(model => model.RolName, new { htmlAttributes = new { @class = "form-control", style = "color:red;background-color:yellow" } })
                @Html.ValidationMessageFor(model => model.RolName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.IsActive)
                    @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.RegisterDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.RegisterDate, new { htmlAttributes = new { @class = "form-control",type="date"} })
                @Html.ValidationMessageFor(model => model.RegisterDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
